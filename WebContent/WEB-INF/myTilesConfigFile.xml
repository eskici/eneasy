<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="basePage" template="/pages/templates/template.jsp">
		<put-attribute name="header" value="/pages/templates/defaultHeader.jsp" />
		<put-attribute name="menu" value="/pages/templates/defaultMenu.jsp"/>
		<put-attribute name="footer" value="/pages/templates/defaultFooter.jsp" />
    </definition>
    <definition name="homePage" extends="basePage">
		<put-attribute name="body" value="/pages/templates/home_body.jsp" />
    </definition>
    <definition name="adminPage" extends="basePage">
		<put-attribute name="body" value="/pages/admin/console.jsp" />
    </definition>
    <definition name="myPage" extends="basePage">
		<put-attribute name="body" value="/pages/entry/my-entries.jsp" />
    </definition>    
</tiles-definitions>